@using AirBB.Models
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirBB</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-house-chimney"></i> AirBB
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <nav class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Reservation -->
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reservation" ? "active fw-semibold text-primary" : "")"
                               asp-controller="Reservation" asp-action="Index">
                                <i class="fa-solid fa-bookmark"></i> Reservations
                                @{
                                    var count = HttpContextAccessor.HttpContext?.Session.GetObject<List<Reservation>>("Reservations")?.Count ?? 0;
                                }
                                @if (count > 0)
                                {
                                    <span class="badge bg-danger ms-1">@count</span>
                                }
                            </a>

                        <!-- Admin -->
                            <a class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" ? "active fw-semibold text-primary" : "")"
                               asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                <i class="fa-solid fa-user-gear"></i> Admin
                            </a>

                    </div>
                </nav>
            </div>
        </nav>

        <!-- Success or Confirmation Messages -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center rounded-0 mb-0">
                <i class="fa-solid fa-circle-check"></i> @TempData["Message"]
            </div>
        }
    </header>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
