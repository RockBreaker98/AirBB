@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="home-hero d-flex align-items-center justify-content-center text-center">
    <div class="hero-content text-light">
        <h1 class="display-3 fw-bold">Welcome to AirBB</h1>
        <p class="lead fs-4">Find your perfect stay, experience, and service.</p>
    </div>
</section>

<!-- List Section -->
<section class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-white">Available Residences</h2>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Cozy Apartment in Downtown</h5>
                    <p class="card-text">A modern and comfortable apartment perfect for short stays.</p>
                    <a href="@Url.Action("List", "Residence")" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Luxury Villa with Pool</h5>
                    <p class="card-text">Spacious villa with private pool, ideal for family vacations.</p>
                    <a href="@Url.Action("List", "Residence")" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Mountain Cabin Escape</h5>
                    <p class="card-text">Peaceful cabin surrounded by nature for a relaxing getaway.</p>
                    <a href="@Url.Action("List", "Residence")" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</section>

