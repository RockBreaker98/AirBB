@model IEnumerable<Client>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>  
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>SSN</th> 
            <th>User Type</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.ClientId</td>  
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.SSN</td>
                <td>@user.UserType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.ClientId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.ClientId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
