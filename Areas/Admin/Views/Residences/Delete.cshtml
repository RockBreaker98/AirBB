
@model Residence
@{
    ViewData["Title"] = "Delete Residence";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-trash"></i> Delete Residence
    </h2>

    <div class="alert alert-warning shadow-sm">
        <i class="fa-solid fa-triangle-exclamation"></i>
        Are you sure you want to permanently delete this residence?
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Location</dt>
                <dd class="col-sm-9">@Model.Location?.Name</dd>

                <dt class="col-sm-3 fw-semibold">Owner ID</dt>
                <dd class="col-sm-9">@Model.OwnerId</dd>

                <dt class="col-sm-3 fw-semibold">Guests</dt>
                <dd class="col-sm-9">@Model.Accommodation</dd>

                <dt class="col-sm-3 fw-semibold">Bedrooms</dt>
                <dd class="col-sm-9">@Model.Bedrooms</dd>

                <dt class="col-sm-3 fw-semibold">Bathrooms</dt>
                <dd class="col-sm-9">@Model.Bathrooms</dd>

                <dt class="col-sm-3 fw-semibold">Built Year</dt>
                <dd class="col-sm-9">@Model.BuiltYear</dd>

                <dt class="col-sm-3 fw-semibold">Price / Night</dt>
                <dd class="col-sm-9">$@Model.Price</dd>

                <dt class="col-sm-3 fw-semibold">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/images/@Model.Image" alt="@Model.Name" width="150" height="100"
                             class="rounded shadow-sm" style="object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- FIXED DELETE FORM -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ResidenceId" />

        <button type="submit" class="btn btn-danger me-2">
            <i class="fa-solid fa-trash"></i> Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
