@model AirBB.Models.ExperienceListViewModel
@{
    ViewData["Title"] = "Experience List";
}

<h2>Experience List</h2>

<div class="row">
    <aside class="col-md-3">
        <div class="list-group">
            <a asp-controller="Experience" asp-action="List" asp-route-id="All"
               class="list-group-item list-group-item-action @(Model.CurrentCategory=="All" ? "active" : "")">All</a>

            @foreach (var c in Model.Categories)
            {
                <a asp-controller="Experience" asp-action="List" asp-route-id="@c.Name"
                   class="list-group-item list-group-item-action @(Model.CurrentCategory==c.Name ? "active" : "")">
                    @c.Name
                </a>
            }
        </div>
    </aside>

    <section class="col-md-9">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-end">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var e in Model.Experiences)
            {
                <tr>
                    <td>@e.Title</td>
                    <td class="text-end">@e.Price.ToString("c")</td>
                    <td class="text-end">
                        <a class="btn btn-info btn-sm"
                           asp-action="Details" asp-route-id="@e.ExperienceId">View Details</a>
                        <!-- public site could later have Book/AddToCart here -->
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </section>
</div>
