
@model IEnumerable<Location>

<h3>Manage Locations</h3>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Location</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loc in Model)
        {
            <tr>
                <td>@loc.City</td>
                <td>@loc.State</td>
                <td>@loc.Country</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@loc.LocationId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@loc.LocationId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
