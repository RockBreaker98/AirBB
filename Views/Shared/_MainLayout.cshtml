@{
    Layout = "_Layout";

    // For active menu highlighting
    string controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string action     = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<header>
    
    <nav class="navbar navbar-expand-md navbar-light bg-light shadow-sm fixed-top">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">AirBB</a>

            <!-- Toggler -->
           <button class="navbar-toggler" type="button" 
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" 
                    aria-controls="navbarSupportedContent" aria-expanded="false" 
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links 
            <nav class="collapse navbar-collapse" id="mainNavbar">
                <div class="navbar-nav me-auto mb-2 mb-lg-0">
                        <a class="nav-link @(controller=="Residence" ? "active" : "")"
                           asp-controller="Residence" asp-action="List">Homes</a>
                        <a class="nav-link @(controller=="Experience" ? "active" : "")"
                           asp-controller="Experience" asp-action="List">Experiences</a>
                        <a class="nav-link @(controller=="Service" ? "active" : "")"
                           asp-controller="Service" asp-action="List">Services</a>
                </div>-->
               <!-- Right links -->
                <ul class="navbar-nav ms-auto">
                    <!-- Reservations badge -->
                    <li class="nav-item me-3">
                        <a class="nav-link @(controller=="Reservation" ? "active" : "")"
                           asp-controller="Reservation" asp-action="Index" title="My Reservations">
                            Reservation
                            <span class="badge bg-warning text-dark" id="resBadge">@ViewBag.ResCount</span>
                        </a>
                    </li>
                <!-- Right -->
                <div class="navbar-nav">
                        <a class="nav-item nav-link"
                           asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                </div>
            </div>
        </div>
    </nav>
</header>
    
    <div class="container-fluid p-0">
        @RenderBody()
    </div>
</main>


<footer class="mt-auto bg-dark text-white">
    <div class="container py-3 text-center small">
        <a asp-controller="Home" asp-action="Support"           class="text-light text-decoration-none me-2">Support</a> |
        <a asp-controller="Home" asp-action="CancellationPolicy" class="text-light text-decoration-none mx-2">Cancellation Policy</a> |
        <a asp-controller="Home" asp-action="Terms"              class="text-light text-decoration-none mx-2">Terms &amp; Conditions</a> |
        <a asp-controller="Home" asp-action="CookiePolicy"       class="text-light text-decoration-none ms-2">Cookie Policies</a>
    </div>
    <p class="small mt-2 mb-0">&copy; @DateTime.Now.Year - AirBB</p>
</footer>

@section Scripts {
    @RenderSection("Scripts", required: false)
}